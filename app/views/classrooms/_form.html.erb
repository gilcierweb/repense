<%= form_for(@classroom) do |f| %>
    <% if @classroom.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

          <ul>
            <% @classroom.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :student_id, t('classrooms.student'), class: "form_label" %><br>
      <%= f.select :student_id, options_from_collection_for_select(Student.all, :id, :name), prompt: t('classrooms.form.change'), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :course_id, t('classrooms.course'), class: "form_label" %><br>
      <%= f.select :course_id, options_from_collection_for_select(Course.all, :id, :name), prompt: t('classrooms.form.change'), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :entry_at, t('classrooms.entry_at'), class: "form_label" %><br>
      <%= f.datetime_select :entry_at, {}, {  class: "input-sm" } %>
    </div>
    <div class="actions">
      <%= f.submit t('classrooms.form.submit'), class: "btn btn-primary" %>
    </div>
<% end %>
