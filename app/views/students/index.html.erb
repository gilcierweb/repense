<h1><%= t('students.title.index')%></h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t('students.name') %></th>
      <th><%= t('students.register_number') %></th>
      <th><%= t('students.status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.register_number %></td>
        <td><%= text_status(student.status) %></td>
        <td><%= link_to t('views.btn.show'), student, class: "btn btn-info" %></td>
        <td><%= link_to t('views.btn.edit'), edit_student_path(student), class: "btn btn-primary" %></td>
        <td><%= link_to t('views.btn.destroy'), student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('students.new'), new_student_path, class: "btn btn-success" %>
