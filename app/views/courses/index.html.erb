<h1><%= t('courses.title.index') %></h1>

<table class="table table-bordered table-hover">
  <thead>
  <tr>
    <th><%= t('courses.name') %></th>
    <th><%= t('courses.description') %></th>
    <th><%= t('courses.status') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= text_status(course.status) %></td>
        <td><%= link_to t('views.btn.show'), course, class: "btn btn-info" %></td>
        <td><%= link_to t('views.btn.edit'), edit_course_path(course), class: "btn btn-primary" %></td>
        <td><%= link_to t('views.btn.destroy'), course, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('courses.new'), new_course_path, class: "btn btn-success" %>
